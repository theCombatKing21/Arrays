class Solution {
    public double findMaxAverage(int[] nums, int k) {
      int n=nums.length;
        double curr=0;
        for(int i=0;i<k;i++){
            curr+=nums[i];
        }

        double res= curr;

        for (int i=k;i<n;i++){
            curr=curr+nums[i]-nums[i-k];
            
            res= Math.max(res,curr);
        }

        return (res/k);   
    }
}
