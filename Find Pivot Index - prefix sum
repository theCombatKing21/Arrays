class Solution {
    public int pivotIndex(int[] nums) {
        int rs = 0, ls = 0;
        int n = nums.length;

        for (int i = 0; i < n; i++) {

            rs = rs + nums[i];
        }
        for (int i = 0; i < n; i++) {

            rs = rs - nums[i];

            if (ls == rs) {
                return i;
            }
            ls = ls + nums[i];
        }
        return -1;
    }
}
